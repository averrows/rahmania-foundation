---
import { Image } from "astro:assets";
import Foto1 from "../assets/Foto1.jpeg";
---

<section
  class="relative h-screen flex items-center justify-center bg-gradient-to-br from-emerald-400 via-blue-500 to-yellow-200 overflow-hidden animate-gradient-xy"
>
  <Image
    src={Foto1}
    alt="Decorative image 1"
    class="absolute left-0 bottom-0 w-full md:w-1/2 lg:w-1/3 opacity-30 md:opacity-50 object-cover h-full md:h-2/3"
  />
  <Image
    src={Foto1}
    alt="Decorative image 2"
    class="absolute right-0 top-0 w-full md:w-1/2 lg:w-1/3 opacity-30 md:opacity-50 object-cover h-full md:h-2/3"
  />

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center text-white">
      <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold mb-4 md:mb-6">
        Empowering Lives Through Education
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl mb-6 md:mb-8 max-w-2xl mx-auto">
        Rahmania Foundation is dedicated to providing quality education and
        creating opportunities for underprivileged communities.
      </p>
      <div class="space-x-2 md:space-x-4">
        <button
          id="donateButton"
          class="inline-block bg-white text-blue-600 px-6 md:px-8 py-2 md:py-3 rounded-full font-semibold hover:bg-blue-50 transition-colors text-sm md:text-base"
        >
          Donate Now
        </button>
        <a
          href="#programs"
          class="inline-block border-2 border-white text-white px-6 md:px-8 py-2 md:py-3 rounded-full font-semibold hover:bg-white hover:text-blue-600 transition-colors text-sm md:text-base"
        >
          Our Programs
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes gradient-xy {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-gradient-xy {
    background-size: 200% 200%;
    animation: gradient-xy 20s ease infinite;
  }
</style>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const donateButton = document.getElementById('donateButton');

    donateButton.addEventListener('click', () => {
      window.dispatchEvent(new Event('openDonateModal'));
    });
  });
</script>