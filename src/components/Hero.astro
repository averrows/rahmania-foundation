---
import { Image } from "astro:assets";
import Foto1 from "../assets/Foto1.jpeg";
import Picture1 from "../assets/Picture1.jpg";
import Picture2 from "../assets/Picture2.jpg";
import Picture4 from "../assets/Picture4.jpg";
import Picture5 from "../assets/Picture5.jpg";
import Picture6 from "../assets/Picture6.jpg";
import Picture7 from "../assets/Picture7.jpg";
import Picture8 from "../assets/Picture8.jpg";
import Picture9 from "../assets/Picture9.jpg";
import Picture10 from "../assets/Picture10.jpg";
---

<section class="h-screen px-4 sm:px-6 md:px-8 flex md:flex justify-items-center bg-gradient-to-br from-emerald-400 via-blue-500 to-emerald-300 overflow-hidden">
      <div class="container mx-auto flex lg:flex-row md:flex-row flex-col-reverse gap-8 md:grid md:grid-cols-12 justify-center items-center text-white text-left z-10">
        <div class="flex flex-col gap-4 md:col-span-6">
          <h1 class="text-3xl sm:text-4xl md:text-6xl font-bold md:mb-6">
            Mengubah <span class="text-emerald-400">hidup</span>
            <br />
            dengan <span class="text-yellow-200">pendidikan</span>
          </h1>
          <p class="text-lg sm:text-xl md:text-2xl max-w-2xl">
            Rahmania Foundation berkomitmen penuh dalam membantu anak-anak kurang
            mampu, terutama anak yatim, untuk mendapatkan pendidikan yang layak bagi
            masa depan mereka.
          </p>
          <div class="space-y-4">
            <button
              id="donateButton"
              class="inline-flex items-center justify-center bg-yellow-400 text-blue-800 text-[0.9rem] md:text-lg px-6 md:px-8 py-3 md:py-4 rounded-md font-bold hover:bg-yellow-300 hover:scale-105 hover:shadow-lg transition-all duration-200"
            >
              <span>ðŸ’–</span> Donasi Sekarang untuk Masa Depan!
            </button>

            <br />
            <button class="border-2 border-white text-white px-6 md:px-8 py-2 md:py-3 rounded-md font-semibold hover:bg-white hover:text-blue-600 hover:opacity-80 transition-colors text-sm md:text-base">
              <a href="#programs">Lihat program</a>
            </button>
          </div>
        </div>
        <div class="grid grid-cols-12 gap-2 max-w-4xl mx-auto md:col-span-6">
          <Image
            src={Picture1}
            alt="Education Impact"
            class="col-span-6 row-span-2 w-full h-full object-cover"
          />
          <Image
            src={Picture2}
            alt="Education Impact"
            class="col-span-6 w-full h-full object-cover"
          />
          <Image
            src={Picture4}
            alt="Education Impact"
            class="col-span-3 w-full h-full object-cover"
          />
          <Image
            src={Picture5}
            alt="Education Impact"
            class="col-span-3 w-full h-full object-cover"
          />
        </div>
      </div>
    </section>

<style>
  @keyframes gradient-xy {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-gradient-xy {
    background-size: 200% 200%;
    animation: gradient-xy 20s ease infinite;
  }
</style>

<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const donateButton = document.getElementById("donateButton");

    donateButton.addEventListener("click", () => {
      window.dispatchEvent(new Event("openDonateModal"));
    });
  });
</script>
