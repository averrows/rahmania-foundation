---
const { post } = Astro.props;
---

<article class="bg-white shadow-md rounded-lg overflow-hidden">
    {post.data.image ? (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="h-48 w-full object-cover rounded-t-lg mb-4"
        />
      ) : (
        <div class="h-48 w-full bg-gradient-to-r from-blue-500 to-blue-400 text-white flex items-center justify-center rounded-t-lg mb-4">
          <span class="text-lg font-semibold">No Image</span>
        </div>
    )}
  <div class="p-6">
    <h2 class="text-2xl font-semibold mb-2">
      <a href={`/blog/${post.slug}`} class="text-blue-600 hover:underline">
        {post.data.title}
      </a>
    </h2>
    <p class="text-gray-600 mb-4">{post.data.excerpt || post.body.slice(0, 150) + '...'}</p>
    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-500">{new Date(post.data.publishDate).toLocaleDateString()}</span>
      <a href={`/blog/${post.slug}`} class="text-blue-500 hover:underline">Read more</a>
    </div>
  </div>
</article>