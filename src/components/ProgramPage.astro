---
import { getCollection } from "astro:content";
import ProgramCard from "../components/ProgramCard.astro";

const allPrograms = await getCollection("programs");
---

<section id="programs" class="py-36 bg-gray-50 px-4
    sm:px-6
    md:px-8">
  <div class="container
    flex
    flex-col
    text-left">
    <h2 class="text-3xl md:text-4xl font-normal mb-4">
      Program Rahmania
      <span class="text-emerald-400">tersebar</span>
      <br />
      di seluruh Indonesia
    </h2>
    <p class="text-lg md:text-xl mb-12">
      Rahmania memiliki bermacam jenis program yang tersebar di seluruh
      Indonesia. Kami mengadakan pendidikan, pelatihan, dan bantuan kepada
      masyarakat kurang mampu.
    </p>
    <div
      class="flex flex-col w-full gap-8 sm:grid sm:grid-cols-2 sm:justify-items-center py-8 px-4"
    >
      {
        allPrograms.map((program, index) => (
          <ProgramCard
            title={program.data.title}
            description={program.data.description}
            location={program.data.location}
            images={program.data.images}
            color={index % 2 === 0 ? "#34d399" : "#facc15"}
          />
        ))
      }
    </div>
  </div>
</section>
