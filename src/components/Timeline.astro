---
import { Image } from "astro:assets";

const timelineEvents = [
  {
    date: "December 2023",
    title: "Annual Education Fair",
    description:
      "Successfully organized our biggest education fair yet, connecting over 1000 students with educational opportunities.",
    image: "/timeline/education-fair.jpg",
  },
  {
    date: "August 2023",
    title: "Digital Literacy Program Launch",
    description:
      "Launched our comprehensive digital literacy program reaching 500 students in rural areas.",
    image: "/timeline/digital-literacy.jpg",
  },
  {
    date: "March 2023",
    title: "Scholarship Distribution",
    description:
      "Awarded scholarships to 100 deserving students for higher education.",
    image: "/timeline/scholarship.jpg",
  },
  {
    date: "January 2023",
    title: "Foundation Establishment",
    description:
      "Rahmania Foundation was officially established with the mission to empower through education.",
    image: "/timeline/establishment.jpg",
  },
];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
      Our Activities
    </h2>

    <div class="relative">
      {/* Vertical line - hidden on mobile */}
      <div
        class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-blue-200 via-blue-400 to-blue-200"
      >
      </div>

      <div class="space-y-12 md:space-y-20">
        {
          timelineEvents.map((event, index) => (
            <div class="relative">
              {/* Date bubble - Responsive positioning */}
              <div
                class={`
                  md:absolute md:left-1/2 md:transform md:-translate-x-1/2 md:-translate-y-1/2 
                  w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 
                  rounded-full flex items-center justify-center z-10
                  mb-4 md:mb-0 mx-auto md:mx-0
                `}
              >
                <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center">
                  <span class="text-blue-600 text-sm font-semibold">
                    {index + 1}
                  </span>
                </div>
              </div>

              {/* Content container - Responsive layout */}
              <div
                class={`
                  flex flex-col md:flex-row items-start md:items-center gap-4 md:gap-8
                  ${index % 2 === 0 ? "md:flex-row-reverse" : ""}
                `}
              >
                {/* Content card */}
                <div
                  class={`w-full md:w-1/2 ${index % 2 === 0 ? "md:text-right" : ""}`}
                >
                  <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <span class="inline-block px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm font-semibold mb-3">
                      {event.date}
                    </span>
                    <h3 class="text-xl font-bold mt-2 mb-4 text-gray-800">
                      {event.title}
                    </h3>
                    <p class="text-gray-600 mb-6 leading-relaxed">
                      {event.description}
                    </p>
                    <div class="rounded-lg overflow-hidden shadow-md">
                      <Image
                        src={event.image}
                        alt={event.title}
                        width={600}
                        height={400}
                        class="w-full h-48 md:h-64 object-cover hover:scale-105 transition-transform duration-300"
                      />
                    </div>
                  </div>
                </div>
                {/* Spacer for desktop layout */}
                <div class="hidden md:block md:w-1/2" />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Card hover effect */
  .bg-white {
    transition: transform 0.3s ease;
  }

  .bg-white:hover {
    transform: translateY(-5px);
  }

  /* Gradient animation for the timeline line */
  @keyframes gradient-flow {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 0% 100%;
    }
  }

  .bg-gradient-to-b {
    background-size: 100% 200%;
    animation: gradient-flow 3s linear infinite;
  }
</style>
